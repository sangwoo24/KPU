<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="412dp"
        android:layout_height="430dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="7">

        <Button
            android:onClick="percentage"
            android:id="@+id/perBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="14dp"
            android:text="%"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:onClick="root"
            android:id="@+id/rootBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="√"
            app:layout_column="1"
            app:layout_row="0" />


        <Button
            android:onClick="power"
            android:id="@+id/PowBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="x^2"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:onClick="reciprocal"
            android:id="@+id/reciBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="1/X"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:onClick="clearCurrentValue"
            android:id="@+id/ceBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="14dp"
            android:text="CE"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:onClick="clearAll"
            android:id="@+id/cBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="C"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:onClick="deleteNum"
            android:id="@+id/delBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="DEL"
            android:textSize="14sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:onClick="calculateNum"
            android:id="@+id/divBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="÷"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="14dp"
            android:text="7"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="8"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="9"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:onClick="calculateNum"
            android:id="@+id/mulBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="×"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="14dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="5"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="6"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:onClick="calculateNum"
            android:id="@+id/subBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="−"
            app:layout_column="3"
            app:layout_row="3" />


        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="14dp"
            android:text="1"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="2"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="3"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:onClick="calculateNum"
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="+"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:onClick="convertToNegative"
            android:id="@+id/negativeBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="14dp"
            android:text="±"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:onClick="inputNumber"
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="0"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:onClick="appendPoint"
            android:id="@+id/pointBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="."
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:onClick="calculateNum"
            android:id="@+id/equalBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="="
            app:layout_column="3"
            app:layout_row="5" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="391dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="409dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:columnCount="6"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:onClick="clearMemory"
            android:id="@+id/mcBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="MC"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:onClick="readMemory"
            android:id="@+id/mrBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="MR"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:onClick="add_Memory"
            android:id="@+id/mAddBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="M+"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:onClick="sub_Memory"
            android:id="@+id/mSubBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="M-"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:onClick="setMemory"
            android:id="@+id/msBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="MS"
            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:onClick="viewMemory"
            android:id="@+id/mBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="M"
            app:layout_column="5"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


