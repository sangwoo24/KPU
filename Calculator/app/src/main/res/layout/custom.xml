                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/b11"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:onClick="memoryIndexClear"
                    android:text="MC" />

                <Button
                    android:id="@+id/b12"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M+" />

                <Button
                    android:id="@+id/b13"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M-" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/b21"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="MC" />

                <Button
                    android:id="@+id/b22"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M+" />

                <Button
                    android:id="@+id/b23"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M-" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/b31"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="MC" />

                <Button
                    android:id="@+id/b32"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M+" />

                <Button
                    android:id="@+id/b33"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M-" />
            </LinearLayout>

            <LinearLayout
