                    android:id="@+id/t4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/b41"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="MC" />

                <Button
                    android:id="@+id/b42"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M+" />

                <Button
                    android:id="@+id/b43"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M-" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/b51"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="MC" />

                <Button
                    android:id="@+id/b52"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="M+" />

